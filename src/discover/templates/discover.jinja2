{% extends "layout.jinja2" %}

{% block content %}
    <link
        rel="stylesheet"
        href="/discover/static/discover.css"
        type="text/css"
    />

    <div id="discover-container">
        <h1 id="discover-title">Discover new restaurants and cafes</h1>
        <div id="discover-neighbourhoods-parent">
            {% for neighbourhood in neighbourhoods %}
            <div id="discover-neighbourhoods-child">
                <div id="discover-neighbourhoods-child-upper">
                    <img id="home-img" src="{{ neighbourhood.img_url }}" width="300" height="auto">
                </div>
                <div id="discover-neighbourhoods-child-lower">
                    <p>{{ neighbourhood.name }}</p>
                    {% if neighbourhood.venues_count > 1 %}
                        <p>{{ neighbourhood.venues_count }} venues</p>
                    {% else %}
                        <p>{{ neighbourhood.venues_count }} venue</p>
                    {% endif%}
                </div>

            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}