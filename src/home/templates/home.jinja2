{% extends "layout.jinja2" %}

{% block content %}
    <link
        rel="stylesheet"
        href="/static/home.css"
        type="text/css"
    />

    <div id="home-container">
        <h1 id="home-title">Meet your next favorite restaurant</h1>
        <img id="home-img" src="/static/home-pineapple.jpg" width="300" height="auto">
        <form id="home-form" action="/discover/search" method="GET">
            <input id="home-query" type="text" name="query" placeholder="e.g. Kallio">
            <button id="home-submit" type="submit">Search</button>
        </form>
        <div id="home-searchinfo">
            <p>You can search by street address, postal code, city or neighbourhood.</p>
        </div>
    </div>
{% endblock %}