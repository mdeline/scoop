{% extends "layout.jinja2" %}

{% block content %}

  <div class="container">
  <h2>Query Results</h2>
    {% for restaurant in restaurants %}
    <h3>{{ restaurant.name }} </h3>
    <ul id="restaurant.name">
      <li>
        <span class="field-name">Restaurant:</span>
        <span class="field-value">{{ restaurant.name }}</span>
      </li>
      <li>
        <span class="field-name">Description:</span>
        <span class="field-value">{{ restaurant.description }}</span>
      </li>
      <li>
        <span class="field-name">Address:</span>
        <span class="field-value">{{ restaurant.address }}</span>
      </li>
      <li>
        <span class="field-name">Postal Code:</span>
        <span class="field-value">{{ restaurant.postalcode }}</span>
      </li>
      <li>
        <span class="field-name">City:</span>
        <span class="field-value">{{ restaurant.city }}</span>
      </li>
    </ul>
    <a href="/restaurant/{{ restaurant.id }}">See Reviews</a>
    {% endfor %}
  </div>

{% endblock %}